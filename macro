i
// second largest using macros
#include<stdio.h>
#define N 100
void main()
{
    int a[N]={10,20,30,40,50,150,60,80},i;
    int l=0,sl=0;
    for(i=0;i<N;i++)
    {
        if(a[i]>l)
        {
        l=a[i];

        }

        else if (a[i]>sl)
        {
            sl<l;
            sl=a[i];
        }

    }
    printf("\nlargest element is %d",l);
    printf("\nsecond largest is %d",sl);
}
